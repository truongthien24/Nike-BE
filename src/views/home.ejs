<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .topnav {
            background-color: #333;
            overflow: hidden;
        }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>

</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <form method="post" action="/create-user" style="margin: 30px 10px; padding: 20px; border-radius: 5px; background-color: #eaeaea; width: max-content;">
        <div style="margin: 10px 0;">
            <h5>Name: </h5>
            <input name="name" placeholder="Input name..." required />
        </div>
        <div style="margin: 10px 0;">
            <h5>Email: </h5>
            <input name="email" placeholder="Input email..." required type="email" />
        </div>
        <div style="margin: 10px 0;">
            <h5>City: </h5>
            <input name="city" placeholder="Input city..." required />
        </div>
        <button style="margin-top: 20px; width: 100%; background-color: #04AA6D; color: white;">Sign Up</button>
    </form>

    <script>
        const jwt = localStorage.getItem("jwt")
        console.log("jwt", jwt)
        if(!jwt) {
            window.location.replace('/login')
        }
    </script>
</body>

</html>